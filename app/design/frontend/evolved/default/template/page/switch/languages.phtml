/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php $storeId = Mage::app()->getStore()->getStoreId(); ?>

<?php if(count($this->getStores())>1): ?>
<div class="currency-switcher">
<div class='scrollableList'>	
     <?php foreach ($this->getStores() as $_lang): ?>
		<?php if($storeId==$_lang->getData('store_id')) :   ?>
			<div class="selectedOption">
				<img src="<?php echo $this->getSkinUrl('images/flags/' . $_lang->getCode() . '.png');?>" alt=""> 
				<?php echo $_lang->getData('name'); ?>
		    </div> 
		<?php endif; ?>
    <?php endforeach;?> 
			
	   <ul style="display: none;">	   
		   <?php foreach ($this->getStores() as $_lang): ?>
			<?php  if ($storeId != $_lang->getData('store_id')): ?>
		   		<li>  
					<img src="<?php echo $this->getSkinUrl('images/flags/' . $_lang->getCode() . '.png');?>" alt=""> 
				    <a class="" href="<?php echo $_lang->getData('home_url') ?>"><?php echo $_lang->getData('name'); ?></a>
		  	  	</li>
			<?php endif;?>
		    <?php endforeach;?>
		</ul>	 
		
    
 	</div> 
</div>
<?php endif;?>

<script>
jQuery(function () {
    
    jQuery('.selectedOption').on('click', function () {
        jQuery(this).next('ul').slideToggle(200);
        jQuery('.selectedOption').not(this).next('ul').hide();
    });

    
}); 

</script>
