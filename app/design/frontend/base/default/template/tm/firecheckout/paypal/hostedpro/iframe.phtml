if (version_compare(Mage::helper('firecheckout')->getMagentoVersion(), '1.6.1.0') >= 0):
    $iframeId = "hss-iframe";
else:
    $iframeId = "payflow-link-iframe"; // 1.6.0.x and earlier
endif;
?>

<iframe id="<?php echo $iframeId ?>" style="display:none;" scrolling="no" frameborder="0" border="0" src="<?php echo $this->getFrameActionUrl() ?>" height="610" width="570"></iframe>
<script type="text/javascript">
//<![CDATA[
$('<?php echo $iframeId ?>').observe('load', function(){
    if (this.firecheckoutCancelLoad) {
        return;
    }
    $('<?php echo $iframeId ?>').show();
    $('iframe-warning').show();
    firecheckoutWindow.updateSize().center().show();
    $('firecheckout-form').setStyle({
        visibility: 'hidden'
    });
});
//]]>
</script>
