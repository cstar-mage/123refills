<?xml version="1.0"?>
<config>
    <modules>
        <Ideal_Stud>
            <version>1.0.0</version>
        </Ideal_Stud>
    </modules>
    <frontend>
        <routers>
            <stud>
                <use>standard</use>
                <args>
                    <module>Ideal_Stud</module>
                    <frontName>diamond-stud-builder</frontName> 
                </args>
            </stud>
        </routers>
        <layout>
            <updates>
                <stud>
                    <file>stud.xml</file>
                </stud>
            </updates>
        </layout>
    </frontend>
