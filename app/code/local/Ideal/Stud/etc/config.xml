    <adminhtml>
		<menu>
			<catalog module="stud">
        		<children>
					<stud module="stud">
						<title>Manage Stud Builder</title>
						<sort_order>0</sort_order>
						<action>adminhtml/stud/new/</action>
						<children>
							<stud module="stud">
								<title>Setting</title>
								<sort_order>100</sort_order>
								<action>adminhtml/studsetting/setting</action>  
							</stud>
						</children>
					</stud>
				</children>
			</catalog>
		</menu>
