		<acl>
            <resources>
                <admin>
                    <children>
                        <catalog>
                            <children>
								<stud>
										<title>Manage Stud Builder</title>
								</stud>
							</children>
                        </catalog>
						<system>
						  <children>
							<config>
							  <children>
								<stud>
								  <title>Stud Builder Config</title>
								</stud>
							  </children>
							</config>
						  </children>
						</system>
                    </children>
                </admin>
            </resources>
        </acl>
		<layout>
			<updates>
				<stud>
					<file>stud.xml</file>
				</stud>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <stud>
                <class>Ideal_Stud_Model</class>
                <resourceModel>stud_mysql4</resourceModel>
            </stud>
            <stud_mysql4>
                <class>Ideal_Stud_Model_Mysql4</class>
                <entities>
                    <stud>
                        <table>stud</table>
                    </stud>

                    <clarity>
                        <table>clarity</table>
                    </clarity>

                     <carat>
                        <table>carat</table>
                    </carat>
 

                </entities>  
            </stud_mysql4>
        </models>
        <resources>
            <stud_setup>
                <setup>
                    <module>Ideal_Stud</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </stud_setup>
            <stud_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </stud_write>
            <stud_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </stud_read>
        </resources>
        <blocks>
            <stud>
                <class>Ideal_Stud_Block</class>
            </stud>
        </blocks>
        <helpers>
            <stud>
                <class>Ideal_Stud_Helper</class>
            </stud>
        </helpers>
    </global>
</config>