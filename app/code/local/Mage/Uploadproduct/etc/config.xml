<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Uploadproduct>
            <version>0.1.0</version>
        </Mage_Uploadproduct>
    </modules>
    <frontend>
        <routers>
            <uploadproduct>
                <use>standard</use>
                <args>
                    <module>Mage_Uploadproduct</module>
                    <frontName>uploadproduct</frontName>
                </args>
            </uploadproduct>
        </routers>
        <layout>
            <updates>
                <uploadproduct>
                    <file>uploadproduct.xml</file>
                </uploadproduct>
            </updates>
        </layout>
    </frontend>
