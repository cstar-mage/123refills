    <global>
        <models>
            <uploadproduct>
                <class>Mage_Uploadproduct_Model</class>
                <resourceModel>uploadproduct_mysql4</resourceModel>
            </uploadproduct>
            <uploadproduct_mysql4>
                <class>Mage_Uploadproduct_Model_Mysql4</class>
                <entities>
                    <uploadproduct>
                        <table>uploadproduct</table>
                    </uploadproduct>
                </entities>
            </uploadproduct_mysql4>
        </models>
        <resources>
            <uploadproduct_setup>
                <setup>
                    <module>Mage_Uploadproduct</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </uploadproduct_setup>
            <uploadproduct_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </uploadproduct_write>
            <uploadproduct_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </uploadproduct_read>
        </resources>
        <blocks>
            <uploadproduct>
                <class>Mage_Uploadproduct_Block</class>
            </uploadproduct>
        </blocks>
        <helpers>
            <uploadproduct>
                <class>Mage_Uploadproduct_Helper</class>
            </uploadproduct>
        </helpers>
    </global>
