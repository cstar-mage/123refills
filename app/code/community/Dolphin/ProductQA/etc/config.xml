<?xml version="1.0"?>
<config>
    <modules>
        <Dolphin_ProductQA>
            <version>0.1.0</version>
        </Dolphin_ProductQA>
    </modules>
    <frontend>
        <routers>
            <productqa>
                <use>standard</use>
                <args>
                    <module>Dolphin_ProductQA</module>
                    <frontName>productqa</frontName>
                </args>
            </productqa>
        </routers>
        <layout>
            <updates>
                <productqa>
                    <file>productqa.xml</file>
                </productqa>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<productqa>
				<use>admin</use>
				<args>
					<module>Dolphin_ProductQA</module>
					<frontName>productqa</frontName>
				</args>
			</productqa>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<cms><children>
			<productqa module="productqa">
				<title>ProductQA</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="productqa">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>productqa/adminhtml_productqa</action>
					</items>
				</children>
			</productqa>
			</children></cms>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Dolphin_ProductQA>
							<title>ProductQA Module</title>
							<sort_order>10</sort_order>
						</Dolphin_ProductQA>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<productqa>
					<file>productqa.xml</file>
				</productqa>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <productqa>
                <class>Dolphin_ProductQA_Model</class>
                <resourceModel>productqa_mysql4</resourceModel>
            </productqa>
            <productqa_mysql4>
                <class>Dolphin_ProductQA_Model_Mysql4</class>
                <entities>
                    <productqa>
                        <table>productqa</table>
                    </productqa>
                </entities>
            </productqa_mysql4>
        </models>
        <resources>
            <productqa_setup>
                <setup>
                    <module>Dolphin_ProductQA</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productqa_setup>
            <productqa_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productqa_write>
            <productqa_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productqa_read>
        </resources>
        <template>
            <email>
                <catalog_email_email_template translate="label" module="productqa">
                    <label>Product Question Form</label>
                    <file>product_question.html</file>
                    <type>html</type>
                </catalog_email_email_template>                
            </email>
        </template>
        <blocks>
            <productqa>
                <class>Dolphin_ProductQA_Block</class>
            </productqa>
        </blocks>
        <helpers>
            <productqa>
                <class>Dolphin_ProductQA_Helper</class>
            </productqa>
        </helpers>
    </global>
    <default>
        <catalog>
            <productqa>
                <enabled>1</enabled>
            </productqa>  
            <email>       
                <recipient_email><![CDATA[hello@example.com]]></recipient_email>
                <sender_email_identity>custom2</sender_email_identity>
                <email_template>catalog_email_email_template</email_template> 
            </email>            
        </catalog>
    </default>
</config>