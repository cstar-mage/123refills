<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <ProxiBlue_DynCatProd>
            <version>4.23.7</version>
            <depends>
                <Mage_Adminhtml/>
            </depends>
        </ProxiBlue_DynCatProd>
    </modules>
    <global>
        <models>
            <dyncatprod>
                <class>ProxiBlue_DynCatProd_Model</class>
                <resourceModel>dyncatprod_resource</resourceModel>
            </dyncatprod>
            <dyncatprod_resource>
                <class>ProxiBlue_DynCatProd_Model_Resource</class>
                <entities>
                    <rebuild>
                        <table>dyncatprod_rebuild</table>
                    </rebuild>
                    <delaybuild>
                        <table>dyncatprod_delaybuild</table>
                    </delaybuild>
                    <subselect>
                        <table>dyncatprod_subselect</table>
                    </subselect>
                </entities>
            </dyncatprod_resource>
        </models>
        <helpers>
            <dyncatprod>
                <class>ProxiBlue_DynCatProd_Helper</class>
            </dyncatprod>
        </helpers>
        <blocks>
            <dyncatprod>
                <class>ProxiBlue_DynCatProd_Block</class>
            </dyncatprod>
        </blocks>
        <resources>
            <proxiblue_dyncatprodv2_setup>
                <setup>
                    <module>ProxiBlue_DynCatProd</module>
                    <class>ProxiBlue_DynCatProd_Model_Resource_Setup</class>
                </setup>
            </proxiblue_dyncatprodv2_setup>
        </resources>
        <events>
            <catalog_product_save_after>
                <observers>
                    <dyncatprod_catalog_product_save_after>
                        <type>singleton</type>
                        <class>dyncatprod/adminhtml_observer</class>
                        <method>catalog_product_save_after</method>
                    </dyncatprod_catalog_product_save_after>
                </observers>
            </catalog_product_save_after>
            <catalog_category_save_after>
                <observers>
                    <dyncatprod_catalog_category_save_after>
                        <type>singleton</type>
                        <class>dyncatprod/adminhtml_observer</class>
                        <method>catalog_category_save_after</method>
                    </dyncatprod_catalog_category_save_after>
                </observers>
            </catalog_category_save_after>
            <catalog_category_save_commit_after>
                <observers>
                    <dyncatprod_catalog_category_save_commit_after>
                        <type>singleton</type>
                        <class>dyncatprod/adminhtml_observer</class>
                        <method>catalog_category_save_commit_after</method>
                    </dyncatprod_catalog_category_save_commit_after>
                </observers>
            </catalog_category_save_commit_after>
        </events>
    </global>
    <frontend>
        <category>
            <collection>
                <attributes>
                    <dynamic_attributes/>
                </attributes>
            </collection>
        </category>
    </frontend>
    <adminhtml>
        <events>
            <catalog_category_prepare_save>
                <observers>
                    <dyncatprod_catalog_category_prepare_save>
                        <type>singleton</type>
                        <class>dyncatprod/adminhtml_observer</class>
                        <method>catalog_category_prepare_save</method>
                    </dyncatprod_catalog_category_prepare_save>
                </observers>
            </catalog_category_prepare_save>
            <adminhtml_catalog_category_tabs>
                <observers>
                    <dyncatprod_adminhtml_catalog_category_tabs>
                        <type>singleton</type>
                        <class>dyncatprod/adminhtml_observer</class>
                        <method>adminhtml_catalog_category_tabs</method>
                    </dyncatprod_adminhtml_catalog_category_tabs>
                </observers>
            </adminhtml_catalog_category_tabs>
            <adminhtml_block_html_before>
                <observers>
                    <dyncatprod_adminhtml_block_html_before>
                        <type>singleton</type>
                        <class>dyncatprod/adminhtml_grid_columns</class>
                        <method>adminhtml_block_html_before</method>
                    </dyncatprod_adminhtml_block_html_before>
                </observers>
            </adminhtml_block_html_before>
        </events>
        <translate>
            <modules>
                <ProxiBlue_DynCatProd>
                    <files>
                        <default>ProxiBlue_DynCatProd.csv</default>
                    </files>
                </ProxiBlue_DynCatProd>
            </modules>
        </translate>
        <layout>
            <updates>
                <configgen>
                    <file>proxiblue_dyncatprod.xml</file>
                </configgen>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ProxiBlue_DynCatProd before="Mage_Adminhtml">ProxiBlue_DynCatProd</ProxiBlue_DynCatProd>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <crontab>
        <jobs>
            <rebuild_dynamic_gategories>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>dyncatprod/cron::rebuildAllDynamic</model>
                </run>
            </rebuild_dynamic_gategories>
            <rebuild_changed_dynamic_attributes>
                <schedule>
                    <cron_expr>0/10 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>dyncatprod/cron::rebuildChangedDynamic</model>
                </run>
            </rebuild_changed_dynamic_attributes>
            <rebuild_delayed_categories>
                <schedule>
                    <cron_expr>0/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>dyncatprod/cron::rebuildDelayed</model>
                </run>
            </rebuild_delayed_categories>
        </jobs>
    </crontab>
    <default>
        <dyncatprod>
            <rebuild>
                <use_external_crons>0</use_external_crons>
                <max_exec_time>3600</max_exec_time>
                <collection_pagesize>5000</collection_pagesize>
                <ignore_parents>1</ignore_parents>
                <cron_records>50</cron_records>
            </rebuild>
            <ept>
                <mode>1</mode>
                <tooltips>1</tooltips>
            </ept>
            <debug>
                <level>1</level>
            </debug>
        </dyncatprod>
    </default>
    <phpunit>
        <suite>
            <modules>
                <ProxiBlue_DynCatProd/>
            </modules>
        </suite>
    </phpunit>
</config>
