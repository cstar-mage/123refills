<config>
    <tabs>
        <jewelerslink translate="label" module="watches">
            <label>Jewelerslink</label>
            <sort_order>100</sort_order>
        </jewelerslink>
    </tabs>
    <sections>
   
         <watches translate="label" module="watches">
            <label>Watches Configuration</label>
            <tab>jewelerslink</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<user_detail translate="label">
                   <label>Jewelerslink Login Detail</label>
                   <sort_order>2</sort_order>
                   <show_in_default>1</show_in_default>
                   <show_in_website>1</show_in_website>
                   <fields>         
                       <ideal_username translate="label">
                           <label>Jewelerslink Username(Email)</label>
                           <frontend_type>text</frontend_type>
                           <sort_order>1</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>1</show_in_store>
                       </ideal_username>
					<ideal_password translate="label">
                           <label>Jewelerslink Password</label>
                           <frontend_type>password</frontend_type>
                           <sort_order>2</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>1</show_in_store>
                       </ideal_password>    
                   </fields>
                </user_detail>
                
                <settings translate="label">
                    <label>Export Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <name translate="label">
                            <label>FTP Settings</label>
                        </name>
                        <ftp_server translate="label">
                            <label>FTP Server</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ftp_server>
                        
                        <ftp_user translate="label comment">
                            <label>FTP User</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <!-- <comment><![CDATA[In order to access your FTP account information, you must first register and verify your store in TheJewelerslink Merchant Center.  Click <a href="https://merchant.thefind.com/mc/claim.fhtml">here</a> to get started.]]></comment> -->
                        </ftp_user>
                        <ftp_password translate="label">
                            <label>FTP Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ftp_password>
                        
                    </fields>
                </settings>
            </groups>
        </watches>
        
        <cronjobs>
        	<groups>
                <watches translate="label">
                    <label>Watches Import/Export Cron</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>9</sort_order>
                    <show_in_default>1</show_in_default>
		            <show_in_website>0</show_in_website>
		            <show_in_store>0</show_in_store>
                    <fields>
                    	<enabled_export translate="label">
                            <label>Enable Watches Export Cron</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled_export>
                        
                        <cron_expr_export translate="label">
                            <label>Cron Expression (Watches Export)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
				            <show_in_website>0</show_in_website>
				            <show_in_store>0</show_in_store>
                        </cron_expr_export>
                        
                    	<enabled_import translate="label">
                            <label>Enable Watches Import Cron</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled_import>
                        <cron_expr_import translate="label">
                            <label>Cron Expression (Watches Import)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
				            <show_in_website>0</show_in_website>
				            <show_in_store>0</show_in_store>
                        </cron_expr_import>
                        
                        <enabled_update translate="label">
                            <label>Enable Watches Update Cron</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled_update>
                        <cron_expr_update translate="label">
                            <label>Cron Expression (Watches Update)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
				            <show_in_website>0</show_in_website>
				            <show_in_store>0</show_in_store>
                        </cron_expr_update>
                        
                    </fields>
                </watches>
        	</groups>
        </cronjobs>
        
    </sections>
</config>
