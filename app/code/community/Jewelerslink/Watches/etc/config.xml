<?xml version="1.0"?>
<config>
    <modules>
        <Jewelerslink_Watches>
            <version>0.1.1</version>
        </Jewelerslink_Watches>
    </modules>
    <frontend>
        <routers>
            <watches>
                <use>standard</use>
                <args>
                    <module>Jewelerslink_Watches</module>
                    <frontName>watches</frontName>
                </args>
            </watches>
        </routers>
        <layout>
            <updates>
                <watches>
                    <file>watches.xml</file>
                </watches>
            </updates>
        </layout>
    </frontend>
