    <crontab>
        <jobs>
            <ideal_watches_export_cron>
            	<schedule>
                    <config_path>cronjobs/watches/cron_expr_export</config_path>
                </schedule>
                <run>
                    <model>jewelerslink_watches/observer::jewelerslinkExport</model>
                </run>
            </ideal_watches_export_cron>
            
            <ideal_watches_import_cron>
            	<schedule>
                    <config_path>cronjobs/watches/cron_expr_export</config_path>
                </schedule>
                <run>
                    <model>jewelerslink_watches/observer::jewelerslinkWatchImport</model>
                </run>
            </ideal_watches_import_cron>
            
            <ideal_watches_update_cron>
            	<schedule>
                    <config_path>cronjobs/watches/cron_expr_update</config_path>
                </schedule>
                <run>
                    <model>jewelerslink_watches/observer::jewelerslinkWatchUpdate</model>
                </run>
            </ideal_watches_update_cron>
            
    	</jobs>
    </crontab>
    
    <default>
		<watches>
			<settings>
				<ftp_server>jewelerslink.com</ftp_server>
				<ftp_user>watches@jewelerslink.com</ftp_user>
				<ftp_password>jewelerslink123</ftp_password>
				<jewelerslinkjwshare_update>1</jewelerslinkjwshare_update>
			</settings>
		</watches>
		<cronjobs>
            <watches>
                <enabled_export>1</enabled_export>
                <cron_expr_export>0 3 * * *</cron_expr_export>
                
                <enabled_import>1</enabled_import>
                <cron_expr_import>15 3 * * *</cron_expr_import>
                
                <enabled_update>1</enabled_update>
                <cron_expr_update>30 3 * * *</cron_expr_update>
            </watches>
        </cronjobs>
	</default>
	
