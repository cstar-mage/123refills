    <admin>
	    <routers>
	        <adminhtml>
	            <args>
	                <modules>
	                    <watches after="Mage_Adminhtml">Jewelerslink_Watches_Adminhtml</watches>
	                </modules>
	            </args>
	        </adminhtml>
	    </routers>
	</admin>
    
    
    <stores>
        <admin>
            <design>
                <theme>
                    <default>jewelerslink</default>
                </theme>
            </design>
        </admin>
    </stores>
    <adminhtml>
		<menu>
			<jewelryshare module="watches">
				<title>Jewelerslink</title>
				<sort_order>30</sort_order>               
				<children>
					<watches module="watches">
						<title>Watch</title>
						<sort_order>1</sort_order>
						<children>
							<watches_attributes module="watches">
								<title>Watch Attributes</title>
								<sort_order>0</sort_order>
								<action>adminhtml/watches_codes_grid/index</action>
							</watches_attributes>
							<watches_export module="watches">
								<title>Export Watch</title>
								<sort_order>1</sort_order>
								<action>adminhtml/watches_items_grid/index</action>
							</watches_export>
							<watches_import module="watches">
								<title>Import Watch</title>
								<sort_order>2</sort_order>
								<action>adminhtml/watches/importForm/</action>
							</watches_import>
							<watches_settings module="watches">
								<title>Settings</title>
								<sort_order>3</sort_order>
								<action>adminhtml/system_config/edit/section/watches/</action>
							</watches_settings>
						</children>
					</watches>
				</children>
			</jewelryshare>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<jewelryshare>
							<title>Jewelerslink</title>
							<sort_order>10</sort_order>
							<children>
								<watches module="watches">
									<title>Watch</title>
									<children>
										<watches_attributes module="watches">
											<title>Watch Attributes</title>
											<sort_order>0</sort_order>
										</watches_attributes>
										<watches_export module="watches">
											<title>Export Watch</title>
											<sort_order>1</sort_order>
										</watches_export>
										<watches_import module="watches">
											<title>Import Watch</title>
											<sort_order>2</sort_order>
										</watches_import>
										<watches_settings module="watches">
											<title>Settings</title>
											<sort_order>3</sort_order>
										</watches_settings>
									</children>
								</watches>
							</children>
						</jewelryshare>
						<system>
	                        <children>
	                            <config>
	                                <children>
	                                    <watches translate="title" module="watches">
	                                        <title>Watches Configurations</title>
	                                    </watches>
	                                </children>
	                            </config>
	                        </children>
	                    </system>
					</children>
					
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<watches>
					<file>watches.xml</file>
				</watches>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
        
        	<jewelerslink_watches>
                <class>Jewelerslink_Watches_Model</class>
                <resourceModel>jewelerslink_watches_resource</resourceModel>
            </jewelerslink_watches>
            <jewelerslink_watches_resource>
                <class>Jewelerslink_Watches_Model_Resource</class>
                <deprecatedNode>jewelerslink_watches_mysql4</deprecatedNode>
                <entities>
                    <watches_import_codes>
                        <table>watches_import_codes</table>
                    </watches_import_codes>
                </entities>
            </jewelerslink_watches_resource>
        </models>
        <resources>
            <watches_setup>
                <setup>
                    <module>Jewelerslink_Watches</module>
                    <class>Jewelerslink_Watches_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </watches_setup>
            <watches_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </watches_write>
            <watches_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </watches_read>
        </resources>
        <blocks>
            <watches>
                <class>Jewelerslink_Watches_Block</class>
            </watches>
        </blocks>
        <helpers>
            <watches>
                <class>Jewelerslink_Watches_Helper</class>
            </watches>
        </helpers>
    </global>
    
