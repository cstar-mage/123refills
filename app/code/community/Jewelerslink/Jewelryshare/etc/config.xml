<?xml version="1.0"?>
<config>
    <modules>
        <Jewelerslink_Jewelryshare>
            <version>0.1.1</version>
        </Jewelerslink_Jewelryshare>
    </modules>
    <frontend>
        <routers>
            <jewelryshare>
                <use>standard</use>
                <args>
                    <module>Jewelerslink_Jewelryshare</module>
                    <frontName>jewelryshare</frontName>
                </args>
            </jewelryshare>
        </routers>
        <layout>
            <updates>
                <jewelryshare>
                    <file>jewelryshare.xml</file>
                </jewelryshare>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<adminhtml>
	            <args>
	                <modules>
	                    <jewelryshare after="Mage_Adminhtml">Jewelerslink_Jewelryshare_Adminhtml</jewelryshare>
	                </modules>
	            </args>
	        </adminhtml>
        </routers>
    </admin>
    <stores>
        <admin>
            <design>
                <theme>
                    <default>jewelerslink</default>
                </theme>
            </design>
        </admin>
    </stores>
    <adminhtml>
		<menu>
			<jewelryshare module="jewelryshare">
				<title>Jewelers Link</title>
				<sort_order>30</sort_order>               
				<children>
					<jewelery module="jewelryshare">
					<title>Manage Jewelry</title>
					<sort_order>1</sort_order>
						<children>
							<jewelryshare_attributes module="jewelryshare">
								<title>Jewelry Attributes</title>
								<sort_order>0</sort_order>
								<action>adminhtml/jewelryshare_codes_grid/index</action>
							</jewelryshare_attributes>
							<jewelryshare_export module="jewelryshare">
								<title>Export Jewelry</title>
								<sort_order>1</sort_order>
								<action>adminhtml/jewelryshare_items_grid/index</action>
							</jewelryshare_export>
							<jewelryshare_import module="jewelryshare">
								<title>Import Jewelry</title>
								<sort_order>2</sort_order>
								<action>adminhtml/jewelryshare/importForm/</action>
							</jewelryshare_import>
							<jewelryshare_settings module="jewelryshare">
								<title>Settings</title>
								<sort_order>3</sort_order>
								<action>adminhtml/system_config/edit/section/jewelryshare/</action>
							</jewelryshare_settings>
						</children>
					</jewelery>
				</children>
			</jewelryshare>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<jewelryshare module="jewelryshare">
							<title>Jewelers Link</title>
							<sort_order>30</sort_order>  
							<children>
								<jewelery module="jewelryshare">
								<title>Jewelry</title>
								<sort_order>0</sort_order>
									<children>
										<jewelryshare_attributes module="jewelryshare">
											<title>Jewelry Attributes</title>
											<sort_order>0</sort_order>
										</jewelryshare_attributes>
										<jewelryshare_export module="jewelryshare">
											<title>Export Jewelry</title>
											<sort_order>1</sort_order>	
										</jewelryshare_export>
										<jewelryshare_import module="jewelryshare">
											<title>Import Jewelry</title>
											<sort_order>2</sort_order>					
										</jewelryshare_import>
										<jewelryshare_settings module="jewelryshare">
											<title>Settings</title>
											<sort_order>3</sort_order>
										</jewelryshare_settings>
									</children>
								</jewelery>
							</children>
						 </jewelryshare>
						<system>
	                        <children>
	                            <config>
	                                <children>
	                                    <jewelryshare translate="title" module="jewelryshare">
	                                        <title>Jewelryshare Section</title>
	                                    </jewelryshare>
	                                </children>
	                            </config>
	                        </children>
	                    </system>
	                   
					</children>
					
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<jewelryshare>
					<file>jewelryshare.xml</file>
				</jewelryshare>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
        
        	<jewelerslink_jewelryshare>
                <class>Jewelerslink_Jewelryshare_Model</class>
                <resourceModel>jewelerslink_jewelryshare_resource</resourceModel>
            </jewelerslink_jewelryshare>
            <jewelerslink_jewelryshare_resource>
                <class>Jewelerslink_Jewelryshare_Model_Resource</class>
                <deprecatedNode>jewelerslink_jewelryshare_mysql4</deprecatedNode>
                <entities>
                    <jewelryshare_import_codes>
                        <table>jewelryshare_import_codes</table>
                    </jewelryshare_import_codes>
                </entities>
            </jewelerslink_jewelryshare_resource>
        </models>
        <resources>
            <jewelryshare_setup>
                <setup>
                    <module>Jewelerslink_Jewelryshare</module>
                    <class>Jewelerslink_Jewelryshare_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </jewelryshare_setup>
            <jewelryshare_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </jewelryshare_write>
            <jewelryshare_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </jewelryshare_read>
        </resources>
        <blocks>
            <jewelryshare>
                <class>Jewelerslink_Jewelryshare_Block</class>
            </jewelryshare>
        </blocks>
        <helpers>
            <jewelryshare>
                <class>Jewelerslink_Jewelryshare_Helper</class>
            </jewelryshare>
        </helpers>
    </global>
    
    <crontab>
        <jobs>
            <ideal_jewelryshare_export_cron>
            	<schedule>
                    <config_path>cronjobs/jewelryshare/cron_expr_export</config_path>
                </schedule>
                <run>
                    <model>jewelerslink_jewelryshare/observer::jewelerslinkExport</model>
                </run>
            </ideal_jewelryshare_export_cron>
            
            <ideal_jewelryshare_import_cron>
            	<schedule>
                    <config_path>cronjobs/jewelryshare/cron_expr_export</config_path>
                </schedule>
                <run>
                    <model>jewelerslink_jewelryshare/observer::jewelerslinkJewelryImport</model>
                </run>
            </ideal_jewelryshare_import_cron>
            
            <ideal_jewelryshare_update_cron>
            	<schedule>
                    <config_path>cronjobs/jewelryshare/cron_expr_update</config_path>
                </schedule>
                <run>
                    <model>jewelerslink_jewelryshare/observer::jewelerslinkJewelryUpdate</model>
                </run>
            </ideal_jewelryshare_update_cron>
            
    	</jobs>
    </crontab>
    
